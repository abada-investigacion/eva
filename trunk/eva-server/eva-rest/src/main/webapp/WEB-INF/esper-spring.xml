<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"      
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
          http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.1.xsd
                  
">
  
    <tx:annotation-driven proxy-target-class="true" />
    <bean id="transactionManagerLockEva" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerLockEva" />
        <qualifier value="evaLockService-txm"/>
    </bean>
    
    <bean id="entityManagerLockEva" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="persistenceUnitName" value="eva-LockPU" />
    </bean>
    
    <bean id="lockDao" class="com.abada.esper.lock.dao.LockDaoImpl" />
    
    <bean id="lockService" class="com.abada.esper.lock.service.LockService" />
  
    <bean id="esperCore" class="com.abada.esper.EsperLoader">
        <constructor-arg name="url" value="classpath:/META-INF/hl7.esper.config.cfg.xml" />
    </bean>
    
    <bean id="esperService" class="com.abada.esper.service.EsperService" destroy-method="finalice">
        <constructor-arg name="url" value="classpath:/META-INF/statement.esper.config.cfg.xml" />
        <constructor-arg name="loader" ref="esperCore"/>
        <constructor-arg name="lockService" ref="lockService"/>
    </bean>
</beans>
